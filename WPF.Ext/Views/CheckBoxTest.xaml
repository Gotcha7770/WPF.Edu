<UserControl x:Class="WPF.Ext.Views.CheckBoxTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Ext.Views"
             xmlns:viewModels="clr-namespace:WPF.Ext.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <UserControl.Resources>

        <HierarchicalDataTemplate DataType="{x:Type viewModels:TreeViewItemViewModelBase}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsChecked}" Command="{Binding CheckedCommand}"/>
                <TextBlock Text="{Binding Value}"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
        </Style>
        
    </UserControl.Resources>
    
    <TreeView ItemsSource="{Binding Items}">

    </TreeView>
</UserControl>
